<div class="row min-vh-100">
    <div class="my-auto mx-auto border border-2 w-25 p-4">
        <div class="d-flex flex-column">
            <div class="p-2 text-center">
                <h3>Login Portal</h3>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
            <div class="p-2">
                <%= form.label :email, "Email" %>
                <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="p-2">
                <%= form.label :password, "Password" %>
                <%= form.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
            <% if devise_mapping.rememberable? %>
            <div class="p-2">
                <%= form.check_box :remember_me %>
                <%= form.label :remember_me %>
            </div>
            <% end %>
            <div class="p-2">
                <%= form.submit "Log in ", class: "btn btn-primary" %>
            </div>
            <%= render "devise/shared/links" %>
            <% end %>
        </div>
    </div>
</div>