<table class="table table-condensed">
  <thead>
    <tr>
      <th>Ticket Number</th>
      <th>Ticket Type</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.id %></td>
      <td><%= @ticket_types[ticket.ticket_type_id] || "Unknown Type" %></td>
      <td><%= link_to "Show this Ticket", ticket %></td>
    </tr>
    <% end %>
  </tbody>
</table>
