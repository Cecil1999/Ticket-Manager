<table class="table table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <% unless session[:username] == user.username %>
        <% if user.enabled %>
          <td><%= button_to "Destory User", user, method: :delete, class: "btn btn-danger" %></td>
        <% else %>
          <td><%= link_to "Edit User", edit_user_path(user), class:"btn btn-primary" %></td>
        <% end %>
      <% else %>
        <td></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col">
    <%= link_to "New User", new_user_path, class: "btn btn-primary" %>
  </div>
</div>
