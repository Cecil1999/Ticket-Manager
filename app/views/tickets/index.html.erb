<h1>Tickets</h1>

<%= link_to "New ticket", new_ticket_path, class:"btn btn-primary"%>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.title %></td>
        <td><%= ticket.ticket_type %></td>
        <td><%= link_to "Show this Ticket", ticket %></td>
      </tr>
    <% end %>
  </tbody>
</table>
