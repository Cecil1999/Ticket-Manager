<%= form_with(model: ticket_type) do |form| %>
    <% if ticket_type.errors.any? %>
        <div style="color: red;">
            <h2><%= pluralize(ticket_type.errors.count, "Error") %> prohibited saving the Ticket Type.</h2>
        
        <ul>
            <% ticket_type.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>

        </div>
    <% end %>

    <div class="row align-items-start p-4 border">
        <div class="col p-1">
            <div class="float-start me-1">
                <%= form.label :type_name %>
            </div>
            <div class="float-start me-1">
                <%= form.text_field :type_name, class: "form-control" %>
            </div>
        </div>
    </div>
    <div class="row align-items-start p-4">
        <div class="col">
            <%= form.submit(class: "btn btn-primary") %>
        </div>
    </div>
<% end %>