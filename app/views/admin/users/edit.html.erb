
<div class="mt-4 min-vh-100">
    <div class="my-auto mx-auto border border-2 w-50 p-4">
        <div class="container">
            <%= form_with model: @user, url: admin_user_path, method: :patch, local: true do |form| %>
            <div class="row text-center mb-2">
                <h3>Edit User</h3>
            </div>
            <% if notice %>
            <div class="alert alert-info" role="alert">
                <strong><%= notice %></strong>
            </div>
            <% end %>
            <div class="row mb-4">
                <div class="col">
                    <%= form.label :email %>
                    <%= form.text_field :email, class: "form-control" %>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col">
                    <%= form.label :username %>
                    <%= form.text_field :username, class: "form-control" %>
                </div>
            </div>
            <div class="row mb-4">
                <label>Change Password? <input type="checkbox" id="change_password_cb" name="change_password_cb" value="1"></label>
            </div>
            <div class="row mb-4 d-none" id="change_password_div">
                <div class="bs-callout bs-callout-info">
                    <div class="row mb-4">
                        <div class="col">
                            <%= form.label :password %>
                            <%= form.password_field :password, class: "form-control", disabled: true %>
                        </div>
                        <% if @minimum_password_length %>
                        <em><%= @minimum_password_length %> characters minimum.</em>
                        <% end %>
                    </div>
                    <div class="row mb-4">
                        <div class="col text-start">
                            <%= form.label :password_confirmation %>
                            <%= form.password_field :password_confirmation, class: "form-control", disabled: true %>
                        </div>
                        <em>Must match the password field above.</em>
                        <% if @minimum_password_length %>
                        <em><%= @minimum_password_length %> characters minimum.</em>
                        <% end %>
                    </div>
                </div>
            </div>
            <% if current_user.is_admin? %>
            <div class="row mb-4">
                <div class="col">
                    <%= form.label :admin %>
                    <%= form.checkbox :admin %>
                </div>
            </div>
            <% end %>
            <div class="row mb-4">
                <div class="col">
                    <%= form.label :enabled %>
                    <%= form.checkbox :enabled %>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <%= form.submit("Update", class: "btn btn-primary") %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>